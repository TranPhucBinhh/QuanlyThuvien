@model IEnumerable<QuanlyThuvien.Models.NhaCungCap>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layoutchung.cshtml";
}

<h2>Quản lý nhà cung cấp</h2>

<p>
    @Html.ActionLink("Thêm nhà cung cấp", "Them")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaNhaCungCap)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenNhaCungCap)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoDienThoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaNhaCungCap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenNhaCungCap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaNhaCungCap }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaNhaCungCap }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaNhaCungCap })
            </td>
        </tr>
    }

</table>


