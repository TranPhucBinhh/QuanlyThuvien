@model IEnumerable<QuanlyThuvien.Models.TheLoai>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layoutchung.cshtml";
}

<h2>Thể loại</h2>

<p>
    @Html.ActionLink("Thêm thể loại", "Them")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaTheLoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenTheLoai)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaTheLoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenTheLoai)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.MaTheLoai  }) |
            @Html.ActionLink("Details", "Details", new {  id=item.MaTheLoai }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.MaTheLoai  })
        </td>
    </tr>
}

</table>
